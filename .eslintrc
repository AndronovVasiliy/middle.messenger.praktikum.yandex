{
  "extends": "airbnb",
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "max-len": [2, 120],
    "@typescript-eslint/no-unused-vars": 2,
    "import/prefer-default-export": "off",
      "import/extensions": [
          "error",
          "ignorePackages",
          {
              "js": "never",
              "ts": "never"
          }
      ]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@components", "./src/components"],
          ["@Icons", "./src/Icons"]
        ],
        "extensions": [".ts", ".js", ".json", ".svg"]
      }
    }
  }
}
