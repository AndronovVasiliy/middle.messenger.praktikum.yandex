{
  "extends": "stylelint-config-standard",
  "customSyntax": "postcss-less",
  "rules": {
    "selector-class-pattern": ["^([a-z][a-z0-9]*)(_[a-z0-9]+)*$", { "message": "Class names should be in snake_case" }],
    "color-function-notation": null,
    "alpha-value-notation": null
  },
  "ignoreFiles": [
    "dist/*"
  ]
}
